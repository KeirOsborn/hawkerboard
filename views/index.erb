<html>
  <head>

    <!-- Including our Stylesheets -->
    <link rel="stylesheet" type="text/css" href='/css/bootstrap-responsive.css'>
    <link rel="stylesheet" type="text/css" href='/css/bootstrap.css'>
    <link rel="stylesheet" type="text/css" href='/css/flat-ui.css'>
    <link rel="stylesheet" type="text/css" href='/css/main.css'>

    <!-- Including JQuery Underscore and Backbone -->
    <script type="text/javascript" src="/js/jquery-1.9.1.js"></script>
    <script type="text/javascript" src="/js/underscore.js"></script>
    <script type="text/javascript" src="/js/backbone.js"></script>
    <script type="text/javascript" src="/js/handlebars.js"></script>
    <!--script type="text/javascript" src="/js/jquery.masonry.min.js"></script-->

    <script src="/js/jquery.vintage.js"></script>


  </head>
  <body>
    <nav>
      <article class="search">
        <span class="search-logo">
        <input type="text" placeholder="search">
      </article>
      <article class="logo">
        <img src="images/logo.jpg" class="logo" alt="hawkerboard">
      </article>
      <article class="your-account">
        <span id="add-item-button" class="btn">Sell your item</span>
        <menu>Your Account</menu>
      </article>
    </nav>

    <section id="container"></section>


    <script id="item-template" type="text/x-handlebars-template">
      <article class="item" id="{{cid}}">
        <header>
          <img src="{{image}}">
        </header>
        <section>
          <h1>{{title}}</h1>
          <p>{{description}}</p>
          <p class="price">£{{price}}</p>
          <dt>
            {{#each tags}}
            <p>{{this}}</p>
            {{/each}}
          </dt>
        </section>
      </article>
    </script>

    <script id="product-template" type="text/x-handlebars-template">
    <article class="item" id="{{cid}}">
        <header>
          <img src="{{image}}">
        </header>
        <section>
          <h1>{{title}}</h1>
          <p>{{description}}</p>
          <p class="price">£{{price}}</p>
          <dt>
            {{#each tags}}
            <p>{{this}}</p>
            {{/each}}
          </dt>
        </section>
        <footer>
        </footer>
      </article>
    </script>

    <script id="add-item-form-template" type="text/x-handlebars-template">
    <article class="form-holder">
    <form>
      <input name="item_name" placeholder="Product Name">
      <input name="item_price" placeholder="Product Price">
      <input name="item_description" placeholder="Produce Description">
      <input name="item_tags"placeholder="Tags">
      <input name="username" placeholder="Your Name">
      <button class="btn">Submit for Sale</button>
    </form>
  </article>
    </script>

